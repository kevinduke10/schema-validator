{
  "name": "Temperature Signal Schema",
  "type": "signal",
  "version": 1,
  "active": true,
  "description": "Schema for temperature signal data",
  "schema": {
    "type": "object",
    "properties": {
      "sensorId": {
        "type": "string"
      },
      "temperature": {
        "type": "number",
        "minimum": -273.15
      },
      "unit": {
        "type": "string",
        "enum": ["celsius", "fahrenheit", "kelvin"]
      },
      "timestamp": {
        "type": "string",
        "format": "date-time"
      }
    },
    "required": ["sensorId", "temperature", "unit", "timestamp"]
  }
}

